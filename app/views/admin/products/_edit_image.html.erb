<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel"> Update image prodcut </h5>
</div>
<%= form_for @product, url: update_image_admin_product_path(@product), method: :patch do |f|%>
  <div class="modal-body">
    <div class="form-group">
      <%= f.file_field :image, required: true, accept:'image/*' %>
    </div>
  </div>
    <div class="modal-footer">
    <%= f.submit "Update image", class: "btn btn-primary closemodal" %>
    <button type="button" class="btn btn-secondary btn-close-modal" data-dismiss="modal"> Close </button>
  </div>
<% end %>
<%= render "modal" %>
