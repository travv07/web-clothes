<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"> Update image user </h5>
        </div>
          <%= form_for @product, url: update_image_product_path(@product), method: :patch, remote: true do |f|%>
            <div class="modal-body">
              <div class="form-group">
                <%= f.file_field :avatar, required: true, accept:'image/*' %>
              </div>
            </div>
            <div class="message"></div>
            <div class="modal-footer">
              <%= f.submit "Update image", class: "btn btn-primary closemodal" %>
              <button type="button" class="btn btn-secondary btn-close-modal" data-dismiss="modal"> Close </button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
